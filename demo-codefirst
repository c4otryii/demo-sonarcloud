using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace CFDoCaoTri
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void Form1_Load(object sender, EventArgs e)
        {
            // TODO: This line of code loads data into the 'qLSV20DTHC5DataSet.Students' table. You can move, or remove it, as needed.
            //this.studentsTableAdapter.Fill(this.qLSV20DTHC5DataSet.Students);
            using (StudentContext db = new StudentContext())
            {
                studentsBindingSource.DataSource = db.Emplist.ToList();
            }

            panel1.Enabled = false;
            Student obj = studentsBindingSource.Current as Student;
            if (obj != null)
            {
                picImage.Image = Image.FromFile(obj.image);
            }


        }

        private void button1_Click(object sender, EventArgs e)
        {
            using (OpenFileDialog ofd = new OpenFileDialog() { Filter = "Images|*.*" })
            {
                if (ofd.ShowDialog() == DialogResult.OK)
                {
                    picImage.Image = Image.FromFile(ofd.FileName);
                    Student obj = studentsBindingSource.Current as Student;
                    if (obj != null)
                    {
                        obj.image = ofd.FileName;
                    }

                }
            }
        }

        private void button2_Click(object sender, EventArgs e)
        {
            picImage.Image = null;
            panel1.Enabled = true;
            studentsBindingSource.Add(new Student());
            studentsBindingSource.MoveLast();
            txtName.Focus();
        }

        private void btnSave_Click(object sender, EventArgs e)
        {
            using (StudentContext db = new StudentContext())
            {
                Student obj = studentsBindingSource.Current as Student;
                if (db != null)
                {
                    if (db.Entry<Student>(obj).State == System.Data.Entity.EntityState.Detached)
                    {
                        db.Set<Student>().Attach(obj);
                    }

                    if (obj.id == 0)
                    {
                        db.Entry<Student>(obj).State = System.Data.Entity.EntityState.Added;
                    }

                    else
                    {
                        db.Entry<Student>(obj).State = System.Data.Entity.EntityState.Modified;
                    }
                    db.SaveChanges();
                    MessageBox.Show(this, "Save Successfully");
                    dgvInforStudent.Refresh();
                    panel1.Enabled = false;
                }
            }
        }

        private void btnUpdate_Click(object sender, EventArgs e)
        {
            panel1.Enabled = true;
            txtName.Focus();
            Student obj = studentsBindingSource.Current as Student;
        }

        private void btnDelete_Click(object sender, EventArgs e)
        {
            if (MessageBox.Show("You want to delete this line ?", "Notification", MessageBoxButtons.YesNo, MessageBoxIcon.Question) == DialogResult.Yes)
            {
                using (StudentContext db = new StudentContext())
                {
                    Student obj = studentsBindingSource.Current as Student;
                    if (obj != null)
                    {
                        if (db.Entry<Student>(obj).State == System.Data.Entity.EntityState.Detached)
                        {
                            db.Set<Student>().Attach(obj);
                        }
                        db.Entry<Student>(obj).State = System.Data.Entity.EntityState.Deleted;
                        db.SaveChanges();
                        MessageBox.Show(this, "Successful Delete");
                        studentsBindingSource.RemoveCurrent();
                        picImage.Image = null;

                    }

                }
            }
        }

        private void btnClose_Click(object sender, EventArgs e)
        {
            if (MessageBox.Show("You want to delete this line ?", "Notification", MessageBoxButtons.YesNo, MessageBoxIcon.Question) == DialogResult.Yes)
            {
                this.Close();
            }
        }

        private void dgvInforStudent_CellContentClick(object sender, DataGridViewCellEventArgs e)
        {
            Student obj = studentsBindingSource.Current as Student;
            if (obj != null)
            {
                picImage.Image = Image.FromFile(obj.image);
            }

        }

        
    }
}
